	pages = {10},
	file = {Gregor et al. - 2024 - Quantifying the impact of key factors on the carbo.pdf:/home/konni/Zotero/storage/6SPIZK58/Gregor et al. - 2024 - Quantifying the impact of key factors on the carbo.pdf:application/pdf},
}

@article{meyer_frost_2024,
