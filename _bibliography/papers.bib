	urldate = {2024-04-05},
	journal = {Carbon Balance and Management},
	author = {Gregor, Konstantin and Krause, Andreas and Reyer, Christopher P. O. and Knoke, Thomas and Meyer, Benjamin F. and Suvanto, Susanne and Rammig, Anja},
	month = mar,
